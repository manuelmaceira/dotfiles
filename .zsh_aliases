txtemp() {
  file=$2
  if [[ $file != '' ]]; then
    if [[ ! $file =~ \.tex$ ]]; then
      file=$file.tex
    fi
    cp ~/data/Documents/LaTeX/templates/$1.tex $file;
    vi $file;
  fi
}

