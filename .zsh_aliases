# simple pin system
pinfile=$HOME/.pins
alias pl='count=1
          while read -r pin; do
            echo "$count $(basename "$pin")"
            (( count++ ))
          done < $pinfile'
alias pa='echo "$PWD" >> $pinfile
          pl'
pd() {
  sed -i "$1d" "$pinfile"
  pl
}
pg() {
  cd "$(sed "$1q;d" "$pinfile")"
}

