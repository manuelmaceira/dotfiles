!-------------------------------------------------------------------------------
! XFT Settings
!-------------------------------------------------------------------------------

xft.dpi:                    96
xft.antialias:              true
xft.hinting:                true
xft.hintstyle:              hintfull
xft.rgba:                   rgb

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------

URxvt.termName:             xterm-256color
!URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.tintColor:            #54487a
URxvt.shading:              100
URxvt.inheritPixmap:        false
URxvt.loginShell:           true
URxvt.saveLines:            50000
URxvt.internalBorder:       10
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           false
URxvt*font: xft:Terminus:pixelsize=14,-wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1
URxvt*boldFont: xft:Terminus:pixelsize=14

! Fix font space
URxvt*letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard,matcher,url-select
URxvt.matcher.button:       1
URxvt.url-select.launcher:  /home/micah/qutebrowser/bin/qutebrowser
URxvt.url-launcher:          /home/micah/qutebrowser/bin/qutebrowser
URxvt.keysym.Control-b: perl:url-select:select_next

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! base16_google-dark
*background: #1e1f21
*foreground: white
*fading: 0
*fadeColor: #33393b
*cursorColor: #93a1a1
*pointerColorBackground: #586e75
