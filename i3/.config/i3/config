# $mod = Alt
set $mod Mod1
floating_modifier $mod

# set variables
set $browser 'qutebrowser'
set $term     'urxvt'
set $cliprog --no-startup-id zsh /home/micah/.config/i3/scripts/cliprog
set $runner  --no-startup-id urxvt -e /home/micah/.config/i3/scripts/runner
set $i3exit  "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
set $smallwidth 900
set $smallheight 640
set $bigwidth 1500
set $bigheight 800
set $defaultgaps 25


###############
# LOOK & FEEL #
###############
# Set fonts
font pango:System San Francisco Display, FontAwesome 13

# set up gaps
for_window [class="^.*"] border pixel 5
gaps inner $defaultgaps

# colors
set_from_resource $dmenu-bg-color 	   i3wm.color0 #2f343f
set_from_resource $dmenu-text-color    i3wm.color5 #f3f4f5
set_from_resource $bg-color 	         i3wm.color1 #676E7D
set_from_resource $inactive-bg-color   i3wm.color0 #2f343f
set_from_resource $text-color          i3wm.color5 #f3f4f5
set_from_resource $inactive-text-color i3wm.color4 #676E7D
set_from_resource $urgent-bg-color     i3wm.color2 #E53935

# window colors         border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $inactive-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# hide edge borders
hide_edge_borders both


##############
# WORKSPACES #
##############

# wokspace names
set $workspace1  "1"
set $workspace2  "2"
set $workspace3  "3"
set $workspace4  "4"
set $workspace5  "5"
set $workspace6  "6"
set $workspace7  "7"
set $workspace8  "8"
set $workspace9  "9"
set $workspace10 "10"


####################
# DROPDOWN WINDOWS #
####################

# scratchpad terminal
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set $smallwidth $smallheight
for_window [instance="dropdown"] move position center
for_window [instance="dropdown"] move scratchpad

# ranger scratchpad
for_window [instance="files"] floating enable
for_window [instance="files"] resize set $smallwidth $smallheight
for_window [instance="files"] move position center
for_window [instance="files"] move scratchpad

# start neomutt in floating window
for_window [instance="email"] floating enable
for_window [instance="email"] resize set $smallwidth $smallheight
for_window [instance="email"] move position center
for_window [instance="email"] move scratchpad

# bc scratchpad
for_window [instance="math"] floating enable
for_window [instance="math"] resize set $smallwidth $smallheight
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad

# start khal in floating window
for_window [instance="cal"] floating enable
for_window [instance="cal"] resize set $smallwidth $smallheight
for_window [instance="cal"] move position center
for_window [instance="cal"] move scratchpad

# start upass in floating window
for_window [instance="pass"] floating enable
for_window [instance="pass"] resize set $smallwidth $smallheight
for_window [instance="pass"] move position center
for_window [instance="pass"] move scratchpad

# start ncpamixer in floating window
for_window [instance="ncpamixer"] floating enable
for_window [instance="ncpamixer"] resize set $smallwidth $smallheight
for_window [instance="ncpamixer"] move position center
for_window [instance="ncpamixer"] move scratchpad

# start weather in floating window
for_window [instance="weather"] floating enable
for_window [instance="weather"] resize set 1200 800
for_window [instance="weather"] move position center
for_window [instance="weather"] move scratchpad

# start tasks in floating window
for_window [instance="tasks"] floating enable
for_window [instance="tasks"] resize set $bigwidth $bigheight
for_window [instance="tasks"] move position center
for_window [instance="tasks"] move scratchpad

# rtorrent terminal
for_window [instance="rtorrent"] floating enable
for_window [instance="rtorrent"] resize set $bigwidth $bigheight
for_window [instance="rtorrent"] move position center
for_window [instance="rtorrent"] move scratchpad

# webcam 1 dropdown
for_window [title="video0 - mpv"] floating enable
for_window [title="video0 - mpv"] sticky enable
for_window [title="video0 - mpv"] border none

# webcam 2 dropdown
for_window [title="video1 - mpv"] floating enable
for_window [title="video1 - mpv"] sticky enable
for_window [title="video1 - mpv"] border none


########################
# AUTORUN APPLICATIONS #
########################

# start compositor
exec --no-startup-id compton

# alternating layout script
#exec --no-startup-id ~/.config/i3/scripts/alternating_layouts.py

# disable trackpad
exec --no-startup-id xinput set-prop "SynPS/2 Synaptics TouchPad" "Device Enabled" 0

# set wallpaper and colors
exec_always --no-startup-id feh --bg-scale ~/.config/wall
exec_always --no-startup-id wal -R -o /home/micah/.config/Scripts/wal-set

# application placements
assign [class="Google-chrome"] $workspace1
assign [class="Firefox"] $workspace1
assign [class="qutebrowser"] $workspace1
assign [class="Skype"] $workspace4

for_window [title="^pdfpc - present"] border none floating enable

# status bar
exec_always --no-startup-id ~/.config/polybar/launch.sh

# start dual monitor
exec --no-startup-id ~/.config/Scripts/screen.sh d

# browser
exec --no-startup-id $browser
# terminal
exec --no-startup-id i3-msg 'workspace $workspace2; exec $term; workspace $workspace1'


