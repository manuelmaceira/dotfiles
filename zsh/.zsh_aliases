alias tmuxlayout='tmux list-windows|sed "s/^.*\[layout \(.*\)\] @.*$/\1/"'

# weather aliases
wttrf()
{
  curl -H "Accept-Language: ${LANG%_*}" wttr.in/"$1"
}
wttr()
{
  wttrf "$1?u"
}
wttrm()
{
  wttrf "$1?m"
}
wt()
{
  wttr "$1?0"
}

# email aliases
