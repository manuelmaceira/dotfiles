# pass aliases
alias pshow='pass show'
alias pedit='pass edit'
alias pupdate='pass update -p'
alias ptail='pass tail'
alias ptedit='pass tailedit'
pnew() {
  pass cp template $1 && pass edit $1
}

# simple pin system
pinfile=$HOME/.pins
alias pl='count=1
          while read -r pin; do
            echo "$count $(basename "$pin")"
            (( count++ ))
          done < $pinfile'
alias pa='echo "$PWD" >> $pinfile
          pl'
pd() {
  sed -i "$1d" "$pinfile"
  pl
}
pg() {
  cd "$(sed "$1q;d" "$pinfile")"
}

# various utilities
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi
alias pipupdate='pip list --outdated --format=freeze|cut -d = -f 1|xargs -n1 sudo -H pip install -U'
alias vgamirror='xrandr --output LVDS-1 --auto --output VGA-1 --auto --same-as LVDS-1'
alias vgaoff='xrandr --output LVDS-1 --auto --output VGA-1 --off'
alias chmox='chmod +x'
alias maketags='ctags -R .'
alias glv="git log --graph --pretty=format:'%h - %d %s (%cr) <%an>' | nvim -R -c 'set filetype=git nowrap' -"
alias rm='rm'
alias sl='ls'
alias ll='ls -alF'
alias la='ls -A'
alias ..='cd ..'
alias ...='cd ../..'
alias speedtest='speedtest-cli'
alias todo='vi ~/.todo.md'
alias makescript="fc -rnl | head -1 >"
alias histg='history | grep'
alias cmount='mount | column -t'
alias meminfo='free -m -l -t'
alias psg='ps aux | grep'
alias ipinfo="curl ifconfig.me && curl ifconfig.me/host"
alias alert='notify-send -i "$([ $? = 0 ] && echo terminal || echo error)" "$(cat ~/.zsh_history|tail -n1|cut -d'\'';'\'' -f2-|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'
alias fuck='sudo /usr/bin/zsh -c "$(fc -ln -1)"'
mcd() { mkdir -p -- "$@"; cd -- "$@";}
cls() { cd "$1"; ls;}
crun() { make "$1"; ./$1;}
backup() { cp "$1"{,.bak};}
md5check() { md5sum "$1" | grep "$2";}
getlocation() { lynx -dump http://www.ip-adress.com/ip_tracer/?QRY=$1|grep address|egrep 'city|state|country'|awk '{print $3,$4,$5,$6,$7,$8}'|sed 's\ip address flag \\'|sed 's\My\\';}

# LaTeX aliases
txa() {
  txtemp article $1
}
txb() {
  txtemp beamer $1
}
txm() {
  cp ~/Documents/LaTeX/templates/mla.sty .;
  txtemp mla $1;
}
txtemp() {
  file=$2
  if [[ $file != '' ]]; then
    if [[ ! $file =~ \.tex$ ]]; then
      file=$file.tex
    fi
    cp ~/Documents/LaTeX/templates/$1.tex $file;
    vi $file;
  fi
}

# Markdown aliases
mda() {
  mdtemp article $1 md
}
mdb() {
  mdtemp beamer $1 md
}
rmda() {
  mdtemp article $1 rmd
}
mdtemp() {
  file=$2
  if [[ $file != '' ]]; then
    if [[ ! $file =~ \.$3$ ]]; then
      file=$file.$3
    fi
    cp ~/Documents/Markdown/templates/$1.$3 $file;
    vi $file;
  fi
}

# C compiling shortcuts for clang and gcc
clang() {
  if [[ $1 =~ \.c$ ]]; then
    clang-3.5 -g $1 -o ${1%%.*};
  else
    echo "$1 is not a c file"
  fi
}
clanglm() {
  if [[ $1 =~ \.c$ ]]; then
    clang-3.5 -g $1 -o ${1%%.*} -lm;
  else
    echo "$1 is not a c file"
  fi
}
gccc() {
  if [[ $1 =~ \.c$ ]]; then
    gcc -std=c99 -Wall -pedantic -Wextra -Werror -O2 -g $1 -o ${1%%.*};
  else
    echo "$1 is not a c file"
  fi
}
gcclm() {
  if [[ $1 =~ \.c$ ]]; then
    gcc -std=c99 -g $1 -o ${1%%.*} -lm;
  else
    echo "$1 is not a c file"
  fi
}

