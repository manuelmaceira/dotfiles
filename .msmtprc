# vim: filetype=config
#These are settings for all accounts.
defaults
protocol smtp
auth on
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

#Below are example accounts. Comment out what you don't use.

#Here is an example gmail account.
account gmail
from micah@mehalter.com
user mhalter3378@gmail.com
passwordeval "gpg2 --quiet --for-your-eyes-only --no-tty --decrypt ~/.mail-gmailunsecure-passwd.gpg"
host smtp.gmail.com
port 587

#Here is another example account. Search for your email host's SMTP server and add the information here.
account gatech
from mehalter@gatech.edu
user mhalter3@gatech.edu
passwordeval "gpg2 --quiet --for-your-eyes-only --no-tty --decrypt ~/.mail-gatech-passwd.gpg"
host outlook.office365.com
port 587
